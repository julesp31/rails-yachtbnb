<div class="navbar navbar-expand-sm navbar-lewagon">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "Oceanic-Dreams-Logo.png", style: 'width: 160px; height: 40px;' %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Home", root_path, class: "nav-link roboto" %>
          </li>
          <li class="nav-item">
            <%= link_to "Yacht", yachts_path, class: "nav-link roboto" %>
          </li>
          <li class="nav-item">
            <%= link_to "My Bookings", bookings_path, class: "nav-link roboto" %>
          </li>
          <li class="nav-item">
            <%= link_to "Add your Yacht", new_yacht_path, class: "nav-link roboto" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Home", root_path, class: "nav-link roboto" %>
          </li>
          <li class="nav-item">
            <%= link_to "Yacht", yachts_path, class: "nav-link roboto" %>
          </li>
          <li class="nav-item">
            <%= link_to "Bookings", bookings_path, class: "nav-link roboto" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign Up / Login", new_user_session_path, class: "nav-link roboto" %>
          </li>
        <% end %>
      </ul>

      <!-- Move dropdown outside of navbar-nav -->
      <ul class="navbar-nav">
        <li class="nav-item dropdown ms-auto">
          <!-- Remove `dropdown-toggle` class and `role="button"` attributes -->
          <a href="#" class="nav-link" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= image_tag 'profile.png', style: 'width: 40px; height: 40px;', class: "avatar", alt: "dropdown menu" %>
          </a>
          <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
            <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
          </div>
        </li>
      </ul>
    </div>
  </div>
</div>
