<div class="formlook">
  <h1> Add your Yacht </h1>
  <br>

  <%= simple_form_for @yacht do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :location %>

    <div class="form-photo">
      <%= f.input :photo, as: :file %>
    </div>

      <div class="form-submit">
        <%= f.submit 'Add Yacht', class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
