<div class="formlook">
    <h1> Become a host </h1>
      <p> Add yuur yacht </p>


      <%= simple_form_for @yacht do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :location %>

        <div class="form-photo">
            <%= f.input :photo, as: :file %>
        </div>

          <div class="form-submit">
              <%= f.submit 'Add Yacht' %>
        </div>
          <% end %>
</div>
