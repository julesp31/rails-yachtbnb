<h2>My Bookings</h2>

<% if @bookings.any? %>
  <table>
    <thead>
      <tr>
        <th>Yacht Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Location</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @bookings.each do |booking| %>
        <tr>
          <td><%= booking.yacht.name %></td>
          <td><%= booking.yacht.description %></td>
          <td><%= number_to_currency(booking.yacht.price) %></td>
          <td><%= booking.yacht.location %></td>
          <td><%= booking.start_date %></td>
          <td><%= booking.end_date %></td>
          <td>
            <%= link_to 'Cancel', booking, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>You have no bookings.</p>
<% end %>
